<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:background="@drawable/layoutbolde"
        android:layout_marginTop="4dp"

        android:padding="@dimen/container_margin">

        <TextView
            android:id="@+id/capitalimage"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="C"
            android:textColor="@color/grey_500"
            android:textSize="90sp" />


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="@dimen/container_margin">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Izina:"
                        android:textSize="15dp"
                        android:layout_marginLeft="70dp"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/collectorName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Izina"
                        android:textSize="15dp"
                        android:layout_marginLeft="10dp"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textStyle="italic" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="-8sp"
                    android:textDirection="firstStrongLtr"
                    android:layout_height="wrap_content">
                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingano:"
                    android:textSize="15dp"
                    android:layout_marginLeft="70dp"
                    android:textStyle="italic"
                    android:textAppearance="?android:textAppearanceSmall" />
                    <TextView
                    android:id="@+id/quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingano"
                    android:textSize="10dp"
                    android:textStyle="italic"
                     android:layout_marginLeft="10dp"
                    android:textAppearance="?android:textAppearanceSmall" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:textDirection="firstStrongLtr"
                    android:layout_height="wrap_content">
                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textStyle="italic"
                    android:text="Ibicuba:"
                    android:layout_marginLeft="70dp"
                    android:textAppearance="?android:textAppearanceSmall" />
                    <TextView
                    android:id="@+id/containers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                        android:textStyle="italic"
                    android:text="Ibicuba"
                    android:layout_marginLeft="10dp"
                    android:textAppearance="?android:textAppearanceSmall" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:textDirection="firstStrongLtr"
                    android:layout_height="wrap_content">
                    <!--number of people whose milk belongs to-->
                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aborozi:"
                    android:textSize="15dp"
                    android:textStyle="italic"
                    android:layout_marginLeft="70dp"
                    android:textAppearance="?android:textAppearanceSmall" />
                    <TextView
                    android:id="@+id/collectionsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:text="Aborozi"
                    android:layout_marginLeft="10dp"
                    android:textAppearance="?android:textAppearanceSmall" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:textDirection="firstStrongLtr"
                    android:layout_height="wrap_content">
                    <!--get amount of money to be paide-->
                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:text="Amount::"
                    android:layout_marginLeft="70dp"/>
                    <TextView
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:text="amount"
                    android:layout_marginLeft="2dp"
                    android:textAppearance="?android:textAppearanceSmall" />


    </LinearLayout>
            </LinearLayout>

    <TextView

        android:textDirection="firstStrongLtr"
        android:gravity="center"
        android:id="@+id/approved"
        android:background="@drawable/receivebutton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:text="Receive"
        android:textColor="#fff"
        />


</RelativeLayout>
